{
  "name": "LightProxy",
  "scripts": {
    "dev:renderer": "snowpack dev --polyfill-node",
    "dev:main": "wait-on http://127.0.0.1:8080 && env TS_NODE_DISABLE_EXIT=1 electron -r ts-node/register main/index.ts",
    "start": "env NODE_ENV=development run-p dev:**",
    "build": "snowpack build",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "electron-log": "^4.2.4",
    "electron-promise-ipc": "^2.2.1",
    "fs-extra": "^9.0.1",
    "fs-extra-promise": "^1.0.1",
    "node-forge": "^0.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "sudo-prompt": "^9.2.1",
    "tailwindcss": "^1.8.6",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@snowpack/app-scripts-react": "^1.10.0",
    "@snowpack/plugin-postcss": "^1.0.3",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@types/fs-extra": "^9.0.1",
    "@types/fs-extra-promise": "^1.0.9",
    "@types/hasha": "^3.0.1",
    "@types/node-forge": "^0.9.5",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/redux-logger": "^3.0.8",
    "@types/snowpack-env": "^2.3.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "autoprefixer": "^9.8.6",
    "electron": "10.1.1",
    "electron-watch": "^1.0.9",
    "eslint": "^7.8.1",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.3.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.2",
    "prettier": "^2.0.5",
    "snowpack": "^2.10.3",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "wait-on": "^5.2.0"
  },
  "build": {
    "appId": "org.lightproxy",
    "mac": {
      "category": "",
      "icon": "./vendor/files/icon.icns",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "./vendor/files/icon.ico",
      "publish": [
        "github"
      ]
    },
    "files": [
      "dist/*.js",
      "dist/*.html",
      "dist/files/*.png",
      "dist/files/node/modules",
      "dist/files/proxy_conf_helper",
      "dist/files/win_proxy_helper.exe",
      "package.json",
      "main.js"
    ],
    "directories": {
      "output": "release"
    }
  }
}